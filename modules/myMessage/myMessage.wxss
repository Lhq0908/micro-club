/* modules/myMessage/myMessage.wxss */

/* 文字卡片 */
.card {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.card .time{
  width: 222rpx;
  height: 34rpx;
  background-color: #c5e0fd;
  border-radius: 17rpx;
  font-size: 22rpx;
  text-align: center;
  color: #fff;
  margin: 31rpx auto;
}

.card .content {
  width: 700rpx;
	height: 395rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 0rpx 14rpx 2rpx 
		rgba(183, 198, 222, 0.7);
	border-radius: 10rpx;
  margin: 0 auto;
}

.card .content .title{
  width: 652rpx;
	height: 42rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  margin: 34rpx auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card .content .row {
  width: 641rpx;
	height: 80rpx;
  font-size: 28rpx;
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card .content .img{
  width: 644rpx;
	height: 150rpx;
  background: rgb(255, 215, 215);
  margin: 28rpx auto;
}

/* 消息卡片 */
.message {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.message .time{
  width: 222rpx;
  height: 34rpx;
  background-color: #c5e0fd;
  border-radius: 17rpx;
  font-size: 22rpx;
  text-align: center;
  color: #fff;
  margin: 31rpx auto;
}

.message .content {
  width: 700rpx;
	height: 234rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 0rpx 14rpx 2rpx 
		rgba(183, 198, 222, 0.7);
	border-radius: 10rpx;
  margin: 0 auto;
}

.message .content .title {
  width: 652rpx;
	height: 42rpx;
  line-height: 42rpx;
  font-size: 30rpx;
