/* 浮动按钮 */
.floating-button {
  position: fixed;
  bottom: 342rpx;
  right: 25rpx;
  width: 110rpx;
	height: 110rpx;
	background-color: #c5e0fd;
	box-shadow: 0rpx 0rpx 14rpx 2rpx 
		rgba(183, 198, 222, 0.7);
	border-radius: 55rpx;
}

.floating-button .text{
  width: 68rpx;
	height: 60rpx;
	font-family: PingFang-SC-Medium;
	font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #ffffff;
  margin: 20rpx auto;
}