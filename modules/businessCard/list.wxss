.businessCard-index .search {
  width: 100%;
  background: #4299ff;
  padding: 30rpx 0;
}

.businessCard-index .search .search-item .city {
  color: #fff;
  font-size: 28rpx;
  background: none;
  padding-left: 7rpx;
  padding-right: 25rpx;
  border: 0px solid rgba(0, 0, 0, 0.2);
}

.businessCard-index .search .search-item .city::after {
  border: none;
}

.businessCard-index .search .search-item .search-input {
  flex: 1;
  background-color: #fff;
  margin: 0 25rpx;
  padding: 9rpx 10rpx;
  border-radius: 40rpx;
  justify-content: space-between;
}

.businessCard-index .search .search-item .search-input image {
  width: 30rpx !important;
  height: 30rpx !important;
  display: block;
  margin: 0 16rpx;
  flex: 0 0 auto;
}

.businessCard-index .search .search-item .search-input .input {
  font-size: 28rpx;
  text-align: left;
  flex: auto;
  width: 100%;
}

.businessCard-index .search .search-item .close {
  display: block;
}

.businessCard-index .search .search-item .close.no {
  display: none;
}

.businessCard-index .resource-btn {
  position: fixed;
  top: 85%;
  right: 25rpx;
}

.businessCard-index .resource-btn image {
  width: 86rpx;
  height: 86rpx;
}

.contentBox .contentBox-item-title {
  padding: 0 25rpx;
  margin-top: 25rpx;
}

.contentBox .contentBox-item-broder {
  border: 2rpx solid #f4f4f4;
  margin-top: 10rpx;
  margin-bottom: 25rpx;
}

.contentBox .list-box {
  padding: 0 25rpx;
}

.contentBox .list-item {
  height: 180rpx;
  margin-bottom: 25rpx;
  border-radius: 10rpx;
  background-color: #4299ff;
  padding: 28rpx 24rpx;
  box-shadow: 0rpx 5rpx 10rpx 5rpx rgba(0, 0, 0, 0.10);
  display: flex;
  justify-content: space-between;
  position: relative;
}
.contentBox .list-item-open {
  height: 180rpx;
  margin-bottom: 25rpx;
  border-radius: 10rpx;
  background-color: #4299ff;
  padding: 28rpx 24rpx;
  box-shadow: 0rpx 5rpx 10rpx 5rpx rgba(0, 0, 0, 0.10);
  display: flex;
  justify-content: space-between;
  position: relative;
  margin-left: 70rpx;
}

.contentBox .list-item image {
  height: 180rpx;
  width: 180rpx;
  margin-right: 25rpx;
  flex: 0 0 auto;
}

.contentBox .list-item .list-item-title-box {
  width: auto;
  flex: 1 1 auto;
  line-height: 1.2;
  color: #fff;
}

.contentBox .list-item .list-item-title-box .name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}

.contentBox .list-item .list-item-title-box .content {
  margin-top: 70rpx;
  font-size: 26rpx;
  line-height: 35rpx;
  height: 70rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  /* white-space: normal !important; */
  white-space: pre-line !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.contentBox .list-item .address {
  /* width: 144rpx; */
  height: 58rpx;
  padding: 0 25rpx;
  background-color: #c5e0fd;
  border-top-right-radius: 10rpx;
  flex: 0 0 auto;
  font-size: 28rpx;
  text-align: center;
  line-height: 58rpx;
  position: absolute;
  color: #4299ff;
  top: 0;
  right: 0;
}
