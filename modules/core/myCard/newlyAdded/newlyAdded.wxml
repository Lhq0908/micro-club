          <view class="conter-li">
            <image class="li-img" src="../../../../assets/core/mycard_weibiaoti.png"></image>
            <text>标题</text>
          </view>
          <view class="conter-li">
            <image class="li-img" src="../../../../assets/core/mycard_zhengwenmoban.png"></image>
            <text>正文</text>
          </view>
          <view class="conter-li">
            <image class="li-img" src="../../../../assets/core/mycard_img.png"></image>
            <text>图片</text>
          </view>
          <view class="conter-li">
            <image class="li-img" src="../../../../assets/core/mycard_video.png"></image>
            <text>视频</text>
          </view>
          <view class="conter-li">
            <image class="li-img" src="../../../../assets/core/mycard_qizi.png"></image>
            <text>分隔线</text>
          </view>
        </view>
