      <image src="../../../../assets/core/mycard-added_bnim.png"></image>
      <view class="a-words">点击上传封面</view>
    </view>
    <view class="introduce">
     <textarea bindblur="bindTextAreaBlur" auto-height placeholder="请输入封面介绍" />
    </view>
