.loadings {
  background: #fff;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 5;
}

.loadings-view {
  width: 388rpx;
  height: 496rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -248rpx;
  margin-left: -194rpx;
}

.loading-image {
  width: 388rpx;
  height: 432rpx;
   display: inline-block;
  position: absolute;
  animation-name: myfirst;
  animation-duration: 3s;
  animation-timing-function: linear;
  animation-delay: 0.1s;
  animation-iteration-count: infinite;
  animation-direction: alternate;
  animation-play-state: running;
}

@keyframes myfirst{
   0%   { top:0px; bottom:0px;}
	25%  { top:-30rpx; bottom:0rpx;}
	50%  { top:0rpx; bottom:30rpx;}
	75%  { top:-30px; bottom:0px;}
	100% { top:0px; bottom:0px;}
} 

.loading-text {
 font-size:28rpx;
color:#333;
position:absolute;
display:inline-block;
left:50%;
top:50%;
margin-top:200rpx;
margin-left:-194rpx;
animation-name:mytext;
animation-duration:3s;
animation-timing-function:linear;
animation-delay:0.1s;
animation-iteration-count:infinite;
animation-direction:alternate;
animation-play-state:running;
}
@keyframes mytext{
  0% {color: #333;}
  25% {color: #666;}
  50% {color: #999;}
  75% {color: rgba(185, 184, 184, 0.842);}
  100% {color: #333;}
  
}


