/* 过渡效果 */
.popup-mask{
  width: 100%;
  height: 500rpx;
  position: fixed;
  left: 0;
  bottom:0;
  font-size: 30rpx;
  background: #fff;
  z-index: 9999;
  color: #333;
  margin-bottom: 170rpx;
}
.popup{
 width: 100%;
 height: 100%;
 background-color: #000;
 opacity: .5;
 z-index: 9990;
 position: fixed;
 top: 0;
 left: 0;
 right: 0;
 bottom:0;
}


.show {
  bottom: 0;
  display: block;
  z-index: 8888;
  opacity: 1;
}

.region-header {
  display: flex;
  justify-content: space-between;
  margin: 0 25rpx;
  line-height: 88rpx;
  height: 88rpx;
}

.region-all {
  color: #666;
  overflow: scroll;
  height: 100%;
  margin-bottom: 200rpx;
  background-color: #fff;
}

.header-right {
  color: #2cc9a9;
}

.header-left {
  color: #999;
}

.regional {
  position: relative;
  display: flex;
}
.mores{
  font-size: 28rpx;
  color: #999;
}
.bottom-move {
  position: absolute;
  width: 33%;
  height: 4rpx;
  background-color: #2cc9a9;
  top: 87rpx;
  left: 0;
  transition: all 0.3s ease;
  z-index: 3;
}
.bottom-moves {
  position: absolute;
  width: 33%;
  height: 4rpx;
  background-color: #2cc9a9;
  top: 87rpx;
  left: 0;
  transition: all 0.3s ease;
  z-index: 3;
}

.regional .text {
  text-align: center;
  width: 33%;
  line-height: 88rpx;
  height: 88rpx;
  overflow: hidden;
}
.regional .texts {
  text-align: center;
  width: 33%;
  line-height: 88rpx;
  height: 88rpx;
  overflow: hidden;
}

.active {
  color: #2cc9a9;
}

.tick {
  position: absolute;
  top: 50%;
  right: 25rpx;
  margin-top: -14rpx;
  width: 32rpx;
  height: 27rpx;
}

.item {
  position: relative;
  line-height: 88rpx;
  height: 88rpx;
  padding-left: 80rpx;
  background-color: #fff;
}
